<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.studytips.StudytipsFragment">

    <TextView
        android:id="@+id/studytipstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/title_studytips"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pomodoro_top"
        android:layout_width="294dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="@string/pomodoro_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studytipstitle" />

    <TextView
        android:id="@+id/pomodoro_content"
        android:layout_width="374dp"
        android:layout_height="130dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/pomodoro_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pomodoro_top" />

    <TextView
        android:id="@+id/todtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tipofday_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pomodoro_content" />

    <Button
        android:id="@+id/todcontent"
        android:layout_width="373dp"
        android:layout_height="81dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:onClick="loadTip"
        android:text="@string/tipofday_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todtitle" />
</androidx.constraintlayout.widget.ConstraintLayout>